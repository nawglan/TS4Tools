# Suppress specific warnings for test projects
[*Tests*.cs]
dotnet_diagnostic.CA1062.severity = none     # Validate arguments of public methods - not needed in tests
dotnet_diagnostic.CA1707.severity = none     # Identifiers should not contain underscores - test method names
dotnet_diagnostic.CA1303.severity = none     # Do not pass literals as localized parameters - test assertions

# Suppress specific SonarQube warnings for design patterns
[Collections/AHandler*.cs]
dotnet_diagnostic.S2933.severity = none      # Fields need to be mutable for handler suspension pattern
dotnet_diagnostic.S4035.severity = none      # Abstract classes are designed for inheritance
