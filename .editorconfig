dotnet_diagnostic.CA2101.severity = warning  # Specify marshaling for P/Invoke string arguments
dotnet_diagnostic.CA2102.severity = warning  # Catch non-CLSCompliant exceptions in general handlers
dotnet_diagnostic.CA2103.severity = warning  # Review imperative security
dotnet_diagnostic.CA2104.severity = warning  # Do not declare read only mutable reference types
dotnet_diagnostic.CA2105.severity = warning  # Array fields should not be read only
dotnet_diagnostic.CA2106.severity = warning  # Secure asserts
dotnet_diagnostic.CA2107.severity = warning  # Review deny and permit only usage
dotnet_diagnostic.CA2108.severity = warning  # Review declarative security on value types
dotnet_diagnostic.CA2109.severity = warning  # Review visible event handlers
dotnet_diagnostic.CA2111.severity = warning  # Pointers should not be visible
