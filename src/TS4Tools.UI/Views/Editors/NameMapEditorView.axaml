<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TS4Tools.UI.ViewModels.Editors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TS4Tools.UI.Views.Editors.NameMapEditorView"
             x:DataType="vm:NameMapEditorViewModel">

    <Design.DataContext>
        <vm:NameMapEditorViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Padding="8" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="Name Map Editor" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding EntryCount, StringFormat='Entries: {0:N0}'}"
                               VerticalAlignment="Center" Opacity="0.7" />
                </StackPanel>
                <TextBox Grid.Column="1" Width="200" Watermark="Filter names..."
                         Text="{Binding FilterText}" />
            </Grid>
        </Border>

        <!-- Add New Entry -->
        <Border DockPanel.Dock="Bottom" Padding="8" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <Grid ColumnDefinitions="Auto,200,*,Auto,Auto" RowDefinitions="Auto">
                <TextBlock Grid.Column="0" Text="Hash:" VerticalAlignment="Center" Margin="0,0,8,0" />
                <TextBox Grid.Column="1" Text="{Binding NewHashText}" Watermark="0x... or auto" />
                <TextBox Grid.Column="2" Text="{Binding NewNameText}" Watermark="Object name..." Margin="8,0" />
                <Button Grid.Column="3" Content="Add" Command="{Binding AddEntryCommand}" Margin="0,0,8,0" />
                <Button Grid.Column="4" Content="Delete" Command="{Binding DeleteEntryCommand}"
                        IsEnabled="{Binding SelectedEntry, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </Grid>
        </Border>

        <!-- Entries DataGrid -->
        <DataGrid ItemsSource="{Binding FilteredEntries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hash (FNV-64)" Binding="{Binding HashHex}" Width="180" IsReadOnly="True" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
