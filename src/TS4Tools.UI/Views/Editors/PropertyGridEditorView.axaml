<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:TS4Tools.UI.ViewModels.Editors"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="TS4Tools.UI.Views.Editors.PropertyGridEditorView"
             x:DataType="vm:PropertyGridViewModel">
    <!-- Source: legacy_references/Sims4Tools/s4pe/s4pePropertyGrid/S4PIPropertyGrid.cs -->

    <Design.DataContext>
        <vm:PropertyGridViewModel />
    </Design.DataContext>

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Padding="8" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Properties" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TypeName}" Opacity="0.7" VerticalAlignment="Center" />
                </StackPanel>
                <Button Grid.Column="1" Command="{Binding RefreshPropertiesCommand}"
                        Content="Refresh" Padding="8,4" FontSize="11" />
            </Grid>
        </Border>

        <!-- Status bar -->
        <Border DockPanel.Dock="Bottom" Padding="8,4" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <TextBlock Text="{Binding StatusMessage}" FontSize="11" Opacity="0.7" />
        </Border>

        <!-- Property Grid -->
        <DataGrid ItemsSource="{Binding Properties}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  GridLinesVisibility="Horizontal"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Property"
                                    Binding="{ReflectionBinding Name}"
                                    Width="180"
                                    IsReadOnly="True" />
                <DataGridTextColumn Header="Type"
                                    Binding="{ReflectionBinding TypeName}"
                                    Width="100"
                                    IsReadOnly="True" />
                <DataGridTextColumn Header="Value"
                                    Binding="{ReflectionBinding Value, Mode=TwoWay}"
                                    Width="*" />
                <DataGridTextColumn Header="Category"
                                    Binding="{ReflectionBinding Category}"
                                    Width="80"
                                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
