<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="TS4Tools.UI.Views.Dialogs.ResourceDetailsWindow"
        Title="Resource Details"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <!-- Source: legacy_references/Sims4Tools/s4pe/Import/ResourceDetails.cs -->

    <DockPanel Margin="16">
        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="_OK" Padding="24,8" IsDefault="True" />
            <Button x:Name="CancelButton" Content="_Cancel" Padding="24,8" IsCancel="True" />
        </StackPanel>

        <StackPanel Spacing="16">
            <!-- Resource Key Section -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1" CornerRadius="4" Padding="12">
                <StackPanel Spacing="12">
                    <TextBlock Text="Resource Key" FontWeight="SemiBold" FontSize="14" />

                    <!-- Type -->
                    <Grid ColumnDefinitions="100,*,Auto">
                        <TextBlock Text="Type:" VerticalAlignment="Center" />
                        <TextBox Grid.Column="1" x:Name="TypeTextBox" Watermark="e.g., 220557DA" />
                        <TextBlock Grid.Column="2" x:Name="TypeNameLabel" Margin="8,0,0,0" VerticalAlignment="Center" Opacity="0.7" />
                    </Grid>

                    <!-- Group -->
                    <Grid ColumnDefinitions="100,*">
                        <TextBlock Text="Group:" VerticalAlignment="Center" />
                        <TextBox Grid.Column="1" x:Name="GroupTextBox" Watermark="e.g., 00000000" />
                    </Grid>

                    <!-- Instance -->
                    <Grid ColumnDefinitions="100,*">
                        <TextBlock Text="Instance:" VerticalAlignment="Center" />
                        <TextBox Grid.Column="1" x:Name="InstanceTextBox" Watermark="e.g., 0000000000000000" />
                    </Grid>

                    <!-- Name (optional) -->
                    <Grid ColumnDefinitions="100,*" x:Name="NameRow">
                        <TextBlock Text="Name:" VerticalAlignment="Center" />
                        <TextBox Grid.Column="1" x:Name="NameTextBox" Watermark="Resource name (optional)" />
                    </Grid>

                    <!-- Hash buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button x:Name="FNV64Button" Content="FNV64 from Name" Padding="12,4" FontSize="11" />
                        <Button x:Name="FNV32Button" Content="FNV32 from Name" Padding="12,4" FontSize="11" />
                        <Button x:Name="HighBitButton" Content="Set High Bit" Padding="12,4" FontSize="11" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Metadata Section -->
            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="1" CornerRadius="4" Padding="12">
                <StackPanel Spacing="8">
                    <TextBlock Text="Metadata" FontWeight="SemiBold" FontSize="14" />

                    <Grid ColumnDefinitions="100,*">
                        <TextBlock Text="Compressed:" VerticalAlignment="Center" />
                        <CheckBox Grid.Column="1" x:Name="CompressedCheckBox" Content="Compress resource" />
                    </Grid>

                    <Grid ColumnDefinitions="100,*">
                        <TextBlock Text="Data Size:" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1" x:Name="DataSizeLabel" VerticalAlignment="Center" />
                    </Grid>

                    <Grid ColumnDefinitions="100,*">
                        <TextBlock Text="File Size:" VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1" x:Name="FileSizeLabel" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Copy/Paste Section -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="CopyKeyButton" Content="Copy Resource Key" Padding="12,4" />
                <Button x:Name="PasteKeyButton" Content="Paste Resource Key" Padding="12,4" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
