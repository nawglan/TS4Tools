<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dialogs="clr-namespace:TS4Tools.UI.Views.Dialogs"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="TS4Tools.UI.Views.Dialogs.OrganiseBookmarksWindow"
        Title="Organise Bookmarks"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <!-- Source: legacy_references/Sims4Tools/s4pe/Settings/OrganiseBookmarksDialog.cs -->

    <DockPanel Margin="16">
        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="_OK" Padding="24,8" IsDefault="True" />
            <Button x:Name="CancelButton" Content="_Cancel" Padding="24,8" IsCancel="True" />
        </StackPanel>

        <!-- Max bookmarks setting -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
            <TextBlock Text="Maximum bookmarks:" VerticalAlignment="Center" />
            <NumericUpDown x:Name="MaxBookmarksNumeric" Minimum="1" Maximum="20" Width="80" />
        </StackPanel>

        <Grid ColumnDefinitions="*,Auto">
            <!-- Bookmark List -->
            <ListBox Grid.Column="0" x:Name="BookmarksListBox" Margin="0,0,8,0">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="dialogs:BookmarkItem">
                        <TextBlock Text="{Binding DisplayText}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Top">
                <Button x:Name="AddButton" Content="Add..." Padding="16,8" />
                <Button x:Name="DeleteButton" Content="Delete" Padding="16,8" IsEnabled="False" />
                <Separator Margin="0,8" />
                <Button x:Name="MoveUpButton" Content="Move Up" Padding="16,8" IsEnabled="False" />
                <Button x:Name="MoveDownButton" Content="Move Down" Padding="16,8" IsEnabled="False" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
