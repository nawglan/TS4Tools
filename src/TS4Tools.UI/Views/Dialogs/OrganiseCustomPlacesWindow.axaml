<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="TS4Tools.UI.Views.Dialogs.OrganiseCustomPlacesWindow"
        Title="Organise Custom Places"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <!-- Source: legacy_references/Sims4Tools/s4pe/Settings/OrganiseCustomPlacesDialog.cs -->

    <DockPanel Margin="16">
        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="_OK" Padding="24,8" IsDefault="True" />
            <Button x:Name="CancelButton" Content="_Cancel" Padding="24,8" IsCancel="True" />
        </StackPanel>

        <!-- Description -->
        <TextBlock DockPanel.Dock="Top" Text="Custom places appear in Open/Save file dialogs for quick folder access."
                   TextWrapping="Wrap" Opacity="0.7" Margin="0,0,0,16" />

        <!-- Max custom places setting -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
            <TextBlock Text="Maximum custom places:" VerticalAlignment="Center" />
            <NumericUpDown x:Name="MaxPlacesNumeric" Minimum="1" Maximum="10" Width="80" />
        </StackPanel>

        <Grid ColumnDefinitions="*,Auto">
            <!-- Places List -->
            <ListBox Grid.Column="0" x:Name="PlacesListBox" Margin="0,0,8,0" />

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Top">
                <Button x:Name="AddButton" Content="Add Folder..." Padding="16,8" />
                <Button x:Name="DeleteButton" Content="Delete" Padding="16,8" IsEnabled="False" />
                <Separator Margin="0,8" />
                <Button x:Name="MoveUpButton" Content="Move Up" Padding="16,8" IsEnabled="False" />
                <Button x:Name="MoveDownButton" Content="Move Down" Padding="16,8" IsEnabled="False" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
