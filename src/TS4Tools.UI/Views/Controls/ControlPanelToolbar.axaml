<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="32"
             x:Class="TS4Tools.UI.Views.Controls.ControlPanelToolbar">
    <!-- Source: legacy_references/Sims4Tools/s4pe/ControlPanel/ControlPanel.cs -->

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="0,0,0,1"
            Padding="4,2">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <!-- View Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="2">
                <Button x:Name="HexButton" Content="Hex" Padding="8,4" FontSize="11"
                        ToolTip.Tip="Show hex view" />
                <Button x:Name="ValueButton" Content="Value" Padding="8,4" FontSize="11"
                        ToolTip.Tip="Show value/preview" />
                <Button x:Name="GridButton" Content="Grid" Padding="8,4" FontSize="11"
                        ToolTip.Tip="Show property grid" />
            </StackPanel>

            <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

            <!-- Helper Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="2">
                <Button x:Name="Helper1Button" Content="Helper1" Padding="8,4" FontSize="11" />
                <Button x:Name="Helper2Button" Content="Helper2" Padding="8,4" FontSize="11" />
                <Button x:Name="HexEditButton" Content="HexEdit" Padding="8,4" FontSize="11"
                        ToolTip.Tip="Edit with external hex editor" />
            </StackPanel>

            <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

            <!-- Commit Button -->
            <Button x:Name="CommitButton" Content="Commit" Padding="8,4" FontSize="11"
                    ToolTip.Tip="Commit changes to package" />

            <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

            <!-- Display Options -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <CheckBox x:Name="SortCheckBox" Content="Sort" FontSize="11"
                          ToolTip.Tip="Enable sorting in resource list" />
                <CheckBox x:Name="HexOnlyCheckBox" Content="HexOnly" FontSize="11"
                          ToolTip.Tip="Show hex type IDs only" />
                <CheckBox x:Name="UseNamesCheckBox" Content="UseNames" FontSize="11"
                          ToolTip.Tip="Show resource names from NameMap" />
                <CheckBox x:Name="UseTagsCheckBox" Content="UseTags" FontSize="11"
                          ToolTip.Tip="Show resource type tags" />
            </StackPanel>

            <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />

            <!-- Auto Mode -->
            <StackPanel Orientation="Horizontal" Spacing="4">
                <TextBlock Text="Auto:" VerticalAlignment="Center" FontSize="11" Margin="0,0,4,0" />
                <RadioButton x:Name="AutoOffRadio" Content="Off" FontSize="11" GroupName="AutoMode"
                             ToolTip.Tip="No automatic preview" />
                <RadioButton x:Name="AutoHexRadio" Content="Hex" FontSize="11" GroupName="AutoMode"
                             ToolTip.Tip="Auto-show hex view" />
                <RadioButton x:Name="AutoPreviewRadio" Content="Preview" FontSize="11" GroupName="AutoMode"
                             ToolTip.Tip="Auto-show preview" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
