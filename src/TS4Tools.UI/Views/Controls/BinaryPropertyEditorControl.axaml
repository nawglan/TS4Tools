<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="30"
             x:Class="TS4Tools.UI.Views.Controls.BinaryPropertyEditorControl">
    <!-- Source: legacy_references/Sims4Tools/s4pe/s4pePropertyGrid/ReaderEditorPanel.cs -->

    <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
        <Button x:Name="ImportButton"
                Content="Import"
                Padding="6,2"
                FontSize="11"
                ToolTip.Tip="Import binary data from file" />
        <Button x:Name="ExportButton"
                Content="Export"
                Padding="6,2"
                FontSize="11"
                ToolTip.Tip="Export binary data to file" />
        <Button x:Name="EditButton"
                Content="Edit"
                Padding="6,2"
                FontSize="11"
                ToolTip.Tip="Edit in external hex editor" />
        <Button x:Name="HexButton"
                Content="Hex"
                Padding="6,2"
                FontSize="11"
                ToolTip.Tip="View as hex dump" />
        <TextBlock x:Name="SizeLabel"
                   VerticalAlignment="Center"
                   Opacity="0.6"
                   Margin="4,0,0,0" />
    </StackPanel>
</UserControl>
