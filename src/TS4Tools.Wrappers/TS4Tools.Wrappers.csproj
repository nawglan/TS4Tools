<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>TS4Tools.Wrappers</RootNamespace>
    <Description>Resource type wrappers for TS4Tools - STBL, NameMap, and more</Description>
    <!-- Suppress missing XML docs until wrapper documentation is complete -->
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="System.Buffers.Binary" />
    <Using Include="System.Collections" />
    <Using Include="System.Diagnostics.CodeAnalysis" />
    <Using Include="System.Text" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TS4Tools.Interfaces\TS4Tools.Interfaces.csproj" />
    <ProjectReference Include="..\TS4Tools.Core\TS4Tools.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="TS4Tools.Wrappers.Tests" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
